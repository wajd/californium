<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.eclipse.californium.examples">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_cloudcoap"
        android:installLocation="auto"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cloudcoap_round"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CoapActivity"
            android:label="@string/title_activity_coap"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LegalActivity"
            android:label="@string/title_activity_legal"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <service
            android:name=".ServerService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".TimedRequestJob"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>